@model IEnumerable<StudentSquads.ViewModels.ApplicationsListViewModel>
@{
	ViewBag.Title = "EnterApplications";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Заявки на вступление</h2>

<table id="people" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th></th>
			<th>ФИО</th>
			<th>Пол</th>
			<th>Дата рождения</th>
			<th>Телефон</th>
			<th>Место обучения</th>
			<th>Отряд</th>
			<th>Статус</th>
			<th>Взнос</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var member in Model)
		{
		<tr>
			<td><input id =@member.Member.Id type="checkbox"></td>
			<td>@member.Member.Person.FIO</td>
			@{ if (@member.Member.Person.Sex == true){<td>Муж</td>}
				else{<td>Жен</td>}
			 }
					<td>@member.Member.Person.DateofBirth.ToString("dd.MM.yyyy")</td>
					<td>@member.Member.Person.PhoneNumber</td>
					<td>@member.Member.Person.PlaceofStudy</td>
					<td>@member.Member.Squad.Name</td>
					<td>@member.Status</td>
					@{ if (member.FeePayments != null)
						{
							<td>Сдан</td>
						}
						else
						{
							<td>Не Сдан</td>
						}
					}
				</tr>
			}
	</tbody>
</table>


