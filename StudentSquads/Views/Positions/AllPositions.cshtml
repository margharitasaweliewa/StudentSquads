
@{
	ViewBag.Title = "AllPositions";
}

<h2>Управление должностями</h2>
<table id="positions" class="table table-bordered table-hover">
	<thead>
		<tr>
			<th></th>
			<th>ФИО</th>
			<th>Должность</th>
			<th>Дата назначения</th>
			<th>Дата отстранения</th>
			<th>Права доступа</th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>
@section scripts
{
	<script>
		$(document).ready(function () {
			//Используем плагин для поиска и сортировки
			var table = $('#positions').DataTable({
				ajax: {
					url: "/api/positions",
					dataSrc: ""
				},
				columns: [
					{
						data: "Id",
						render: function (data) {
						return "<input id="+data+" type=checkbox>"}
					},
					{
						data: "FIO",
						render: function (data, type, person) {
							return "<a href ='/people/edit/" + person.Id + "'>" + person.FIO + "</a>";
						}
					},
					{
						data: "Position"
					},
					{
						data: "DateofBegin"
					},
					{
						data: "DateofEnd"
					},
					{
						data: "HasRoleString"
					}
				]
			});
		});
	</script>
}

